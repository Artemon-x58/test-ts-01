{
  "compilerOptions": {
    "rootDir": "./lesson 1/src",
    "outDir": "./lesson 1/dist",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "target": "ES2019"
  },
  "include": ["**/*.ts"]
}
